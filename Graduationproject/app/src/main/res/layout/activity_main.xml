<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="@color/indianred">

            <Button
                android:id="@+id/btn_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最新消息"
                android:layout_weight="1"
                android:layout_marginRight="1dp"/>
            <Button
                android:id="@+id/btn_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="政策"
                android:layout_weight="1"
                android:layout_marginRight="1dp"/>
            <Button
                android:id="@+id/btn_specialTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专题"
                android:layout_weight="1"
                android:layout_marginRight="1dp"/>
            <Button
                android:id="@+id/btn_researchReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="研报"
                android:layout_weight="1" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/mainIv_1"
                android:layout_width="500dp"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image1" />
                <ImageView
                    android:id="@+id/mainIv_2"
                    android:layout_width="500dp"
                    android:layout_height="220dp"
                    android:src="@drawable/image2"
                    android:scaleType="centerCrop"
                    android:layout_toRightOf="@id/mainIv_1"/>
                <ImageView
                    android:id="@+id/mainIv_3"
                    android:layout_width="500dp"
                    android:layout_height="220dp"
                    android:src="@drawable/image3"
                    android:scaleType="centerCrop"
                    android:layout_toLeftOf="@id/mainIv_1"/>

        </RelativeLayout>

        <ListView
            android:id="@+id/lv_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/black"
            android:dividerHeight="1dp" android:background="@color/indianred">

        </ListView>

    </LinearLayout>

</ScrollView>